@page
@model AdminPanel.Pages.DeleteProductModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Usuń Produkt</h2>

                    <form method="post">
                        <input type="hidden" asp-for="Product.Id" />

                        <p class="mb-4">Czy na pewno chcesz usunąć produkt: <strong>@Model.Product.Name</strong>?</p>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Usuń</button>
                            <a asp-page="Products" class="btn btn-secondary">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

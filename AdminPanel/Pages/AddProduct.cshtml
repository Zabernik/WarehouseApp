@page
@model AdminPanel.Pages.AddProductModel

<h2>Dodaj Produkt</h2>

<form method="post">
    <label for="name">Nazwa Produktu:</label>
    <input type="text" id="name" name="Product.Name" />

    <label for="value">Wartość:</label>
    <input type="text" id="value" name="Product.Value" />

    <label for="weight">Waga:</label>
    <input type="text" id="weight" name="Product.Weight" />

    <label for="expireDate">Data ważności:</label>
    <input type="date" id="expireDate" name="Product.ExpireDate" />

    <label for="typeOfDetention">Typ Zatrzymania:</label>
    <select id="typeOfDetention" name="Product.TypeOfDetention">
        <option value="Normal">Normal</option>
        <option value="Cold">Cold</option>
        <option value="Freezer">Freezer</option>
    </select>

    <label for="typeOfProduct">Typ Produktu:</label>
    <select id="typeOfProduct" name="Product.TypeOfProduct">
        <option value="Food">Food</option>
        <option value="Electronics">Electronics</option>
        <option value="Clothes">Clothes</option>
    </select>

    <label for="shelfId">Regał:</label>
    <select id="shelfId" name="Product.ShelfId">
        @foreach (var shelf in Model.Shelves)
        {
            <option value="@shelf.Id">@shelf.Id</option>
        }
    </select>

    <button type="submit">Dodaj</button>
</form>

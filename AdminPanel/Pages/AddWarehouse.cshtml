@page
@model AdminPanel.Pages.AddWarehouseModel

<h2>Dodaj Magazyn</h2>

<form method="post">
    <label for="capacity">Pojemność:</label>
    <input type="text" id="capacity" name="Warehouse.Capacity" />

    <label for="typeOfMicroclimate">Typ Mikroklimatu:</label>
    <select id="typeOfMicroclimate" name="Warehouse.TypeOfMicroclimate">
        <option value="Normal">Normal</option>
        <option value="Cold">Cold</option>
        <option value="Freezer">Freezer</option>
    </select>

    <label for="typeOfProduct">Typ Produktu:</label>
    <select id="typeOfProduct" name="Warehouse.TypeOfProduct">
        <option value="Food">Food</option>
        <option value="Electronics">Electronics</option>
        <option value="Clothes">Clothes</option>
    </select>

    <button type="submit">Dodaj</button>
</form>

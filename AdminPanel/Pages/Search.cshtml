@page
@model SearchModel

@{
    ViewData["Title"] = "Wyszukiwanie Produktów";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Wyszukiwanie Produktów</h2>
            <form method="post" class="mt-4">
                <div class="form-group">
                    <label for="productName">Nazwa Produktu:</label>
                    <input type="text" id="productName" name="productName" class="form-control" placeholder="Wprowadź nazwę produktu" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Szukaj</button>
            </form>
            @if (Model.ProductLocation != null)
            {
                <div class="mt-5">
                    <h3 class="text-center">Wynik:</h3>
                    <div class="alert alert-success">
                        <p><strong>Magazyn:</strong> @Model.ProductLocation.WarehouseId</p>
                        <p><strong>Regał:</strong> @Model.ProductLocation.ShelfId</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
